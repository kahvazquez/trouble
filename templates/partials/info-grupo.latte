<form class='jumbotron' method='POST'>

  <div class='form-group'>
    <label for='input-grupo-name'>Nome</label>
    <input
      name='name'
      class='form-control'
      n:attr='value => !$activeGroup->isNew ? $activeGroup->name'
      required/>
  </div>
  <div class='text-right'>
    {if !$activeGroup->isNew}
      <a data-unlink class='btn btn-danger' href=''>
        Remover
      </a>
    {/if}

    <button class='btn btn-primary' type='submit'>
      Salvar
    </button>
  </div>
</form>