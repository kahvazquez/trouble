<div class='form-group'>
     <label>Cidade</label>
     <select name='cidade' class='form-control' required>
            <option value=''>- Selecionar -</option>
            <option n:foreach='$cidades as $cidade' value='{$cidade->id}'>
                          {$cidade->name}
            </option>
        </select>
</div>

<div class='form-group'>
     <label>Fabricante</label>
      <select name='fabricante' class='form-control'>
            <option value=''>- Selecionar -</option>
            <option value='ASGA'>ASGA</option>
            <option value='DATACOM'>DATACOM</option>
        </select>
</div>

<div class='form-group'>
     <label>Identificação</label>
     <input class='form-control' type='text' name='ident' required>
</div>

<div class='form-group'>
     <label>Equipamento</label>
     <input class='form-control' type='text' name='equipamento' required>
</div>

<div class='form-group'>

     <label>Localização</label>
     <input class='form-control' type='text' name='localizacao' required>
</div>

